# Flask Configuration
FLASK_SECRET_KEY=dev-secret-key-change-in-production-2024
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ransomware
DB_USER=root
DB_PASSWORD=

# Security Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# File Upload Configuration
MAX_FILE_SIZE=1048576
ALLOWED_EXTENSIONS=exe,dll,bat,cmd,scr,pif,com

# API Configuration
API_RATE_LIMIT=100
